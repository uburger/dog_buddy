<div id="formContent">
  <div class="filler"></div>
  <form id="new-user-form" action="/users" method="post">
    <legend id="title">Create an account</legend>
    <div class="email-password">
      <input type="email" id="email" class="" name="email" placeholder="email">
      <input type="password" id="password" class="" name="password" 
      placeholder="password"
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
      title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" 
      require>
      <p style="color: blue;">or login with Acebook...</p>
    </div>
    <input type="submit" class="submit" value="Submit">
  </form>
</div>
<div id="message">
  <h3>Password must contain the following:</h3>
  <p id="letter" class="invalid">A lowercase letter</p>
  <p id="capital" class="invalid">A capital (uppercase) letter</p>
  <p id="number" class="invalid">A number</p>
  <p id="length" class="invalid">Minimum 8 characters</p>
</div>

<div class="loginAlert" role="alert">
  <p style="text-align: center;">User already exists! <a href="/sessions/new" style="color: blue;">Login</a></p>
</div>

<div class="emptyAlert" role="alert">
  <p style="text-align: center;">Enter an email!</p>
</div>

<link rel='stylesheet' href='/stylesheets/password_requirements.css' />
<script src="/javascripts/password_requirements.js" ></script>
<script src="/javascripts/userExists.js"></script>
<script src="/javascripts/emptyAlert.js"></script>